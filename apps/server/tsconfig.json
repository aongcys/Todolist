{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2023",
    "baseUrl": ".",
    "paths": {
      "@app/*": [
        "./src"
      ],
      "@packages/*": [
        "../../packages/*"
      ]
    },
    "outDir": "./dist",
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "test",
    "dist",
    "**/*spec.ts"
  ]
}