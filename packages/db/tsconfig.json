{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2022",
    "baseUrl": "./src",
    "outDir": "./dist",
    "strict": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist/**/*"
  ]
}