datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "../dist/client"
}

model User {
  id              String  @id @default(cuid()) // CUID (มีอย่างอื่นอีก) Unique identifier
  firstName       String
  lastName        String
  email           String  @unique
  password        String
  isEmailVerified Boolean @default(true)
  Todo            Todo[]
}

model Todo {
  id          String  @id @default(cuid())
  title       String
  description String?
  completed   Boolean @default(false)
  userId      String
  user        User    @relation(fields: [userId], references: [id])
}
